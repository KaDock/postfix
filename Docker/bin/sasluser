#!/usr/bin/env sh

SASLDB=`saslconf sasldb_path`

usage() {
	echo "sasluser add <domain> <user>"
	echo "sasluser del <domain> <user>"
	echo "sasluser list"
	echo "sasluser dump"
	echo "sasluser load"
	echo "sasluser dev arg..."
}

dev() {
	echo "$1"
	echo "$2"
	echo "$3"
}

add() {
	if [ "$#" -ne 2 ]
	then
		usage
		exit 2
	fi
	SASL_DOMAIN=$1
	SASL_USER=$2
	/usr/sbin/saslpasswd2 -c -f ${SASLDB} -u ${SASL_DOMAIN} ${SASL_USER}
}

del() {
	if [ "$#" -ne 2 ]
	then
		usage
		exit 3
	fi
	SASL_DOMAIN=$1
	SASL_USER=$2
	/usr/sbin/saslpasswd2 -d -f ${SASLDB} -u ${SASL_DOMAIN} ${SASL_USER}
}

list() {
	/usr/sbin/sasldblistusers2 -f ${SASLDB}
}

dump() {
	/usr/bin/db_dump -p ${SASLDB}
}

load() {
	sed -e 's///' | /usr/bin/db_load ${SASLDB}
}

if [ "$#" -lt 1 ]
then
	usage
	exit 1
fi


CMD=$1
shift
if [ "$CMD" = "dev" ]
then
	dev "$@"
elif [ "$CMD" = "add" ]
then
	add "$@"
elif [ "$CMD" = "del" ]
then
	del "$@"
elif [ "$CMD" = "list" ]
then
	list "$@"
elif [ "$CMD" = "dump" ]
then
	dump "$@"
elif [ "$CMD" = "load" ]
then
	load "$@"
fi
